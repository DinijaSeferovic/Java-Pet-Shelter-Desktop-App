<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox fx:id="vboxDiscover" prefHeight="575.0" prefWidth="775.0" style="-fx-background-color: #FFFFFF;" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ba.unsa.etf.controllers.AddController">
    <children>
        <Label text="Set a pet for an adoption" textFill="#ff5757" textOverrun="CLIP">
            <font>
                <Font name="Century Gothic Bold" size="30.0" />
            </font>
            <VBox.margin>
                <Insets bottom="60.0" left="60.0" />
            </VBox.margin>
        </Label>
        <HBox prefHeight="100.0" prefWidth="200.0" spacing="35.0">
            <children>
                <Button fx:id="dogsButton" mnemonicParsing="false" onAction="#dogsAdd" style="-fx-background-color: #FFFFFF;">
                    <graphic>
                        <ImageView fitHeight="200" fitWidth="200" preserveRatio="true">
                            <Image url="@../img/dogs.png" />
                        </ImageView>
                    </graphic>
                    <tooltip>
                        <Tooltip text="Add a dog" />
                    </tooltip>
                </Button>
                <Button fx:id="catsButton" mnemonicParsing="false" onAction="#catsAdd" style="-fx-background-color: #FFFFFF;">
                    <graphic>
                        <ImageView fitHeight="200" fitWidth="200" preserveRatio="true">
                            <Image url="@../img/cats.png" />
                        </ImageView>
                    </graphic>
                    <tooltip>
                        <Tooltip text="Add a cat" />
                    </tooltip>
                </Button>
            </children>
        </HBox>
    </children>
    <padding>
        <Insets left="80.0" top="30.0" />
    </padding>
</VBox>
