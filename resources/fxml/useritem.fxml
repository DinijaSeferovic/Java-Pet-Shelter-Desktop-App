<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox prefWidth="550.0" style="-fx-background-color: #ffd5d5;" styleClass="item-liked" stylesheets="@../css/mainscreen.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ba.unsa.etf.controllers.ItemController">
    <children>
      <VBox style="-fx-background-color: #ffffff;" styleClass="item">
         <children>
              <HBox spacing="45.0">
                  <children>
                          <Label fx:id="nameUserLabel" alignment="CENTER" prefHeight="40.0" text="Name">
                              <font>
                                  <Font name="Cambria" size="15.0" />
                              </font>
                              <HBox.margin>
                                  <Insets />
                              </HBox.margin>
                          </Label>
                          <Label fx:id="usernameUserLabel" alignment="CENTER" prefHeight="40.0" text="Userame">
                              <font>
                                  <Font name="Cambria" size="15.0" />
                              </font>
                              <HBox.margin>
                                  <Insets />
                              </HBox.margin>
                          </Label>
                  </children>
               <VBox.margin>
                  <Insets left="32.0" />
               </VBox.margin>
              </HBox>
            <HBox spacing="45.0">
               <children>
                      <Label fx:id="emailUserLabel" alignment="CENTER" text="Email">
                          <font>
                              <Font name="Cambria" size="15.0" />
                          </font>
                          <HBox.margin>
                              <Insets bottom="5.0" />
                          </HBox.margin>
                      </Label>
                      <Label fx:id="passwordUserLabel" alignment="CENTER" text="Password">
                          <font>
                              <Font name="Cambria" size="15.0" />
                          </font>
                          <HBox.margin>
                              <Insets bottom="5.0" />
                          </HBox.margin>
                      </Label>
               </children>
               <VBox.margin>
                  <Insets left="32.0" />
               </VBox.margin>
            </HBox>
            <Separator prefWidth="200.0" />
            <HBox>
               <children>
                  <Label fx:id="workingUserLabel" text="Working:">
                     <padding>
                        <Insets right="20.0" />
                     </padding></Label>
                  <Label fx:id="roomatesUserLabel" text="Roomates:">
                     <padding>
                        <Insets right="20.0" />
                     </padding></Label>
                  <Label fx:id="homeworkUserLabel" text="Work from home:">
                     <padding>
                        <Insets right="20.0" />
                     </padding></Label>
                  <Label fx:id="yardUserLabel" text="Yard:">
                     <padding>
                        <Insets right="20.0" />
                     </padding>
                  </Label>
                  <Label fx:id="petsUserLabel" text="Other pets:">
                     <padding>
                        <Insets right="20.0" />
                     </padding>
                  </Label>
               </children>
               <VBox.margin>
                  <Insets bottom="2.0" left="32.0" top="2.0" />
               </VBox.margin></HBox>
         </children>
      </VBox>
      <HBox spacing="150.0" style="-fx-background-color: #ffd5d5;">
         <children>
            <Label fx:id="dateLabel" prefWidth="400.0" text="Appointment date:">
               <font>
                  <Font size="14.0" />
               </font>
               <padding>
                  <Insets left="33.0" top="10.0" />
               </padding>
            </Label>
                    <Button fx:id="deleteButton" mnemonicParsing="false" onMouseClicked="#deleteUser" styleClass="transparent" text="">
                        <graphic>
                            <ImageView fitHeight="30" fitWidth="30" preserveRatio="true">
                                <Image url="@../img/deleteicon.png" />
                            </ImageView>
                        </graphic>
                        <HBox.margin>
                            <Insets />
                                    </HBox.margin>
               <tooltip>
                  <Tooltip text="Delete user" />
               </tooltip>
                    </Button>
         </children>
      </HBox>
    </children>
    <padding>
        <Insets bottom="8.0" left="10.0" right="10.0" top="5.0" />
    </padding>
</VBox>
